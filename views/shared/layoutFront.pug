doctype html
html
  head
    title= limpTeam
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.0.0/animate.min.css')
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css' integrity='sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh' crossorigin='anonymous')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js' integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo' crossorigin='anonymous')
    script(src='https://code.jquery.com/jquery-3.3.1.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js' integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6' crossorigin='anonymous')
    script(src="https://kit.fontawesome.com/c178ca7f94.js" crossorigin="anonymous")
  body
    .jumbotron-fluid.contenedor
        .container-fluid.contenedor
          nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a.navbar-brand(href='/')
              img(src='/images/limp.png' width='500' height='200' alt='')
            #navbarSupportedContent.collapse.navbar-collapse
              ul.navbar-nav.mr-auto
                li.nav-item
                  a.nav-link(href='/') Todos Nuestros Articulos
                li.nav-item
                  a.nav-link(href='/promociones') Promociones
          block content
    if(productoscomprados)
      .detalleCarroCompra(ondrop="drop(event)" ondragover="allowDrop(event)")
        .headCarro
          a(href='/carroCompra')
            i.fas.fa-cart-plus
          h4 ProductosSeleccionado
        hr
        .bodyCarro
          each val in productoscomprados
            .itemCarro
              .row
                .col-4
                  i.fas.fa-minus(id = val.id)
                  input.cantidad(type="number", name="" min="1" max="100" id="cantidad"+val.id value = val.cantidad)
                  i.fas.fa-plus(id =  val.id)
                .col-5
                  h4(style='mergin-left:15px') 
                    b(id='cantidadXproducto'+val.id) #{"$ "+ val.cantidadXproducto}
                .col-3
                  button.btn.btn-danger.eliminarItem(style='float:right' id=val.id)
                    i.fas.fa-times 
              .row.fila
                .col-3
                  img(src='admin/producto/getImageFile/'+val.img, alt='' width='50px' height='50px')
                .col-6
                  p(style='margin-top: 12px;') #{val.descripcion}
                .col-3  
                  p(id ='precio'+val.precio style='margin-top: 12px;float:left') #{"$ "+ val.precio}
            hr
    #contactos
      a(href='')
        i.fab.fa-facebook-square
      a(href='')
        i.fab.fa-instagram
      a(href='')
        i.fab.fa-whatsapp
    script(src="/javascripts/frontEnd/frontEnd.js")
    
  