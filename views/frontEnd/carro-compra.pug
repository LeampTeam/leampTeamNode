extends ../shared/layoutFront


block content 
    .jumbotron-fluid.animate__animated.animate__fadeIn.vista
        .container-fluid
            if(mensaje)
                .card-header(class="text-center")
                    img(src='/images/limp.png', alt="", width=300 heigth=150)
                .card.text-center
                    .card-body
                        h3.card-title #{mensaje}
                        p.card-text Vea todas nuestras ofertas y productos apretando el siguiente boton
                        a.btn.btn-info(href='/nustroArticulos')  Ir a Comprar
                    .card-footer.text-muted
                        | Gracias!!
            else
                a.btn.btn-info(href='/nustroArticulos' style='float:right') AÃ±adir Mas Articulos
                table.table.table-hover.tablaCarro
                    thead
                        tr
                            th
                            th(colspan="2") Articulo
                            th P. Uni
                            th Can.
                            th
                    tbody
                        each val2 in verEnChango
                            tr
                                td 
                                    a(href='/borrarItemCarro/'+val2.id)      
                                        i.fas.fa-times 
                                td
                                    img(src="admin/producto/getImageFile/"+val2.img, alt="" width=45 heigth=45)
                                td #{val2.descripcion}
                                td #{val2.precio}
                                td #{val2.cantidad}
                                td 
                                    h5(style='float:left') $
                                    h5(style='float:right') #{val2.cantidadXproducto}
                        tr
                            td(colspan="5" )
                                h4(style='float:right') Total
                            td
                                h4(style='float:left') $
                                h4(style='float:right')
                                    b #{total}
                a.btn.btn-primary(href='/nustroArticulos') Confirmar Compra
            
                    
                                 

                           
