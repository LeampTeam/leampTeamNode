extends ../../shared/layoutAdmin


block content
    .container-fluid.contenedor.contenedorVista
        .card
            .card-header
                .row
                    .col-md-10
                        h4 Crear Categoria
                    .col-md-2
                        a.btn.btn-light(type='button' href='/admin/categoria/grilla') 
                            i.fas.fa-arrow-left
                             | Volver
            .card-body
                form(action = "/admin/categoria/create", method = "POST")
                    .row
                        .col-4
                            .form-group
                            label(for='exampleInputEmail1') Nombre
                            input#exampleInputEmail1.form-control(type='text' aria-describedby='emailHelp' placeholder='Categoria' name='name' value= categoria!=''?categoria.name:'')
                        .col-4
                            .form-group
                            label(for='exampleInputEmail1') Color
                            input#exampleInputEmail1.form-control(type='color' aria-describedby='emailHelp' placeholder='Color' name='color' value= categoria!=''?categoria.color:'')
                        .col-4
                            .form-group
                                label(for='exampleFormControlSelect1') Fragancias
                                select#exampleFormControlSelect1.form-control(name='fragancias' multiple)
                                    option(value=0) Seleccione una categoria 
                                    each val in fragancias
                                        option(value=val._id) #{val.name}
                    button.btn.btn-primary(type='submit') Submit
                    p(style='color:red') #{message}